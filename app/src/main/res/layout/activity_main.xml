<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_static_jni"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="静态JNI调用"
        android:background="@color/lightcoral"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_dynamic_jni"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/lightcoral"
        android:text="动态JNI调用"/>


    <TextView
        android:id="@+id/tv_start"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/lightcoral"
        android:text="开始"/>

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/lightcoral"
        android:text="停止"/>
    <TextView
        android:id="@+id/tv_encode"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/lightcoral"
        android:text="encode_array"/>

    <TextView
        android:id="@+id/tv_rand"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:background="@color/lightcoral"
        android:text="opensll"/>

    <TextView
        android:id="@+id/tv_show"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"/>
</LinearLayout>
